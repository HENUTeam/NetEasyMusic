<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/touch_bg"
    android:layout_height="wrap_content">


        <TextView
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/grey_300"
            android:layout_height="0.5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:layout_width="344dp"
            android:text="sadjhask" />



        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:maxWidth="400dp">

            <ImageButton
                android:background="@color/colornone"
                android:id="@+id/id_songinfo_more"
                android:layout_height="42dp"
                android:layout_width="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_more" />
            <ImageView
                android:id="@+id/id_songinfo_isplay"
                android:layout_centerVertical="true"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_width="18dp"

                android:scaleType="centerCrop"
                android:src="@drawable/icon_isplay" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/id_songinfo_isplay"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_songinfo_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:text="忘了哭"
                        android:textColor="@color/black_1"
                        android:textSize="16dp" />

                    <ImageButton
                        android:background="@color/colornone"
                        android:id="@+id/id_songinfo_mv"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="25dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_mv" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_height="15dp"
                        android:layout_width="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_duigou" />

                    <ImageView
                        android:layout_height="15dp"
                        android:layout_width="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_hq" />

                    <TextView
                        android:id="@+id/id_songinfo_author"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:maxWidth="250dp"
                        android:singleLine="true"
                        android:text="张学友阿打发打发打发按时发生sad萨达阿萨德" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


</RelativeLayout>

