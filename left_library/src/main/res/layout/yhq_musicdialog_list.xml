<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50.0dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/musicdialog_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text="歌名"
        android:textColor="@drawable/dialog_textcolor_select" />

    <TextView
        android:id="@+id/musicdialog_list_Artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/musicdialog_list_title"
        android:layout_below="@id/musicdialog_list_title"
        android:text="歌手名"
        android:textColor="@drawable/dialog_textcolor_select" />

</RelativeLayout>